@model IEnumerable<SportFutbolWeb.Domain.Entities.Cancha>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Canchas</title>
</head>
<body>
<p>
    <a asp-action="Create">Agregar cancha</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoCancha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagenCancha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoCancha.Descripcion)
            </td>
                    <td>
                        <img src="~/images/@item.ImagenCancha"
                             class="rounded-start"
                             height="150" width="150"
                             asp-append-version="true" />
                        <br>
                    </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
